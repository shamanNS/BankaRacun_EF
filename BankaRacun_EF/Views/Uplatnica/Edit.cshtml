@model BankaRacun_EF.Models.Uplatnica

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Uplatnica</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UplatnicaId)

        <div class="form-group">
            @Html.LabelFor(model => model.RacunId, "RacunId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RacunId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RacunId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Iznos, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Iznos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Iznos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DatumPrometa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <!--  Chrome ne prikazuje datepicker kad je type = "datetime", a to ovaj helper po default-u stavlja
                    i da bi prikazao samu vrednost umesto "mm-dd-yyyy" texta value atribut mora da bude u formatu "yyyy-MM-dd"
                    ne može / ili . kao separator, mora - !

                    ili da se format zada anotacijom na modelu: [DisplayFormat(DataFormatString = "{0:yyyy-MM-dd}", ApplyFormatInEditMode = true)]
                    -->
                @*@Html.TextBoxFor(model => model.DatumPrometa, "{0:dd.MM.yyyy}", new { type = "date", Value = Model.DatumPrometa.ToString("yyyy-MM-dd") })*@
                @Html.EditorFor(model => model.DatumPrometa, new { htmlAttributes = new { @class = "form-control", type = "date", title="format: MM/DD/YYYY"}})


                @Html.ValidationMessageFor(model => model.DatumPrometa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SvrhaUplate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SvrhaUplate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SvrhaUplate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Uplatilac, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Uplatilac, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Uplatilac, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Hitno, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Hitno)
                    @Html.ValidationMessageFor(model => model.Hitno, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details", "Racun", new { id = Model.RacunId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
